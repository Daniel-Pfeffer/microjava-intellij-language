<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>org.example.microjava</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>MicroJava-language</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="support@yourcompany.com" url="https://www.yourcompany.com">YourCompany</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="MicroJava"
                implementationClass="org.example.microjava.MicroJavaFileType"
                fieldName="INSTANCE"
                language="MicroJava"
                extensions="mj"
        />
        <lang.parserDefinition
                language="MicroJava"
                implementationClass="org.example.microjava.MicroJavaParserDefinition"
        />
        <lang.syntaxHighlighterFactory
                language="MicroJava"
                implementationClass="org.example.microjava.highlighting.MicroJavaSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="org.example.microjava.highlighting.MicroJavaColorSettingsPage"/>
        <configurationType implementation="org.example.microjava.configuration.run.MicroJavaRunConfigurationType"/>

        <codeInsight.lineMarkerProvider
                language="MicroJava"
                implementationClass="org.example.microjava.MicroJavaLineMarkerProvider"/>

        <completion.contributor
                language="MicroJava"
                implementationClass="org.example.microjava.completion.MicroJavaCompletionContributor"/>

        <psi.referenceContributor
                language="MicroJava"
                implementation="org.example.microjava.reference.MicroJavaReferenceContributor"
        />

        <lang.refactoringSupport
                language="MicroJava"
                implementationClass="org.example.microjava.reference.MicroJavaRefactoringSupportProvider"/>
        />
        <lang.elementManipulator
                forClass="org.example.microjava.psi.MicroJavaDesignator"
                implementationClass="org.example.microjava.psi.manipulator.DesignatorManipulator"
        />
        <lang.elementManipulator
                forClass="org.example.microjava.psi.MicroJavaSimpleType"
                implementationClass="org.example.microjava.psi.manipulator.SimpleTypeManipulator"
        />
        <lang.findUsagesProvider
                language="MicroJava"
                implementationClass="org.example.microjava.usage.MicroJavaUsagesProvider"
        />
        <annotator language="MicroJava"
                   implementationClass="org.example.microjava.highlighting.MicroJavaHighlightingAnnotator"/>

    </extensions>
</idea-plugin>